# Environment variables for IBM Hackathon Project
# Copy this file to .env and fill in your credentials

# IBM Cloud Credentials
IBM_CLOUD_API_KEY=your_ibm_cloud_api_key_here
IBM_CLOUD_URL=https://us-south.ml.cloud.ibm.com

# watsonx.ai Configuration
WATSONX_PROJECT_ID=your_project_id_here
WATSONX_API_KEY=your_watsonx_api_key_here
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# IBM Granite Model Configuration
GRANITE_MODEL_ID=ibm/granite-13b-chat-v2

# IBM Cloud Object Storage (Optional)
COS_API_KEY=your_cos_api_key_here
COS_INSTANCE_ID=your_cos_instance_id_here
COS_ENDPOINT=https://s3.us-south.cloud-object-storage.appdomain.cloud
COS_BUCKET_NAME=traffic-data-bucket

# LangFlow Configuration
LANGFLOW_HOST=0.0.0.0
LANGFLOW_PORT=7860

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
